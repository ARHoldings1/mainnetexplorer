<%- include('layout', { title: 'My Account', content: `
    <div class="profile-container">
        <h1>My Account</h1>
        <div class="profile-info">
            <div class="profile-picture-container">
                <img src="${user.profilePicture || '/images/default-profile.png'}" alt="Profile Picture" class="profile-picture">
            </div>
            <p><strong>Username:</strong> ${user.username}</p>
            <p><strong>Email:</strong> ${user.email}</p>
        </div>
        <h2>Update Profile</h2>
        <form action="/auth/profile" method="POST" class="profile-form" enctype="multipart/form-data">
            <div class="form-group">
                <label for="email">New Email Address:</label>
                <input type="email" id="email" name="email" value="${user.email}">
            </div>
            <div class="form-group">
                <label for="newPassword">New Password:</label>
                <input type="password" id="newPassword" name="newPassword">
            </div>
            <div class="form-group">
                <label for="profilePicture">Profile Picture:</label>
                <input type="file" id="profilePicture" name="profilePicture" accept="image/*">
            </div>
            <button type="submit" class="btn btn-primary">Update Profile</button>
        </form>
    </div>
` }) %>
